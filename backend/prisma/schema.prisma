generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String // Hashed
  username     String   @default("Admin")
  profileImage String   @default("https://github.com/shadcn.png")
  createdAt    DateTime @default(now())
}

// Portfolio Projects
model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  liveLink    String?
  githubLink  String?
  techStack   String[] // Stored as array, e.g. ["React", "Prisma"]
  role        String   @default("Developer")
  year        String   @default("2024")
  client      String?
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact Messages
model Message {
  id        String   @id @default(uuid())
  sender    String
  email     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Post {
  id          String   @id @default(uuid())
  title       String
  content     String // Stores Markdown
  imageUrl    String // The Main Cover Image
  authorName  String   @default("AnaMdTech")
  // Use a default Avatar URL (You can change this default later)
  authorImage String   @default("https://github.com/shadcn.png")
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
