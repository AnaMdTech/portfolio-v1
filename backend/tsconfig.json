{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node" /* <--- Helper for locating modules */,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true /* <--- Ignores deep library errors */,
    "forceConsistentCasingInFileNames": true
    /* REMOVED "types": ["node"] - Let TS find it automatically */
  },
  "include": ["src/**/*"]
}
